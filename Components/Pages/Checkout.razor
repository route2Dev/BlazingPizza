@page "/checkout"
@rendermode InteractiveServer
@inherits MvvmComponent<CheckoutViewModel>

<div class="main">
    <div class="checkout-cols">
        <div class="checkout-order-details">
            <h4>Review order</h4>
            @foreach (var pizza in ViewModel.CurrentOrder.Pizzas)
            {
                <p>
                    <strong>
                        @(pizza.Size)"
                        @pizza.Special.Name
                        ($@pizza.GetFormattedTotalPrice())
                    </strong>
                </p>
            }

            <p>
                <strong>
                    Total price:
                    @ViewModel.CurrentOrder.GetFormattedTotalPrice()
                </strong>
            </p>
        </div>
    </div>

    <button class="checkout-button btn btn-warning" @onclick="ViewModel.PlaceOrderAsync"
        disabled="@ViewModel.IsSubmitting">
        Place order
    </button>
</div>
